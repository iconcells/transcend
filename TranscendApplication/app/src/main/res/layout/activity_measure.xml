<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    tools:context="transcend.hsdp.philips.com.transcendapplication.MeasureActivity">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TableRow
            android:stretchColumns="0,1,2"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_weight="1"
                android:src="@drawable/glucometer"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Blood Glucose"
                android:id="@+id/textView"
                android:layout_weight="1"
                android:background="#ff29fcff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Not Available"
                android:id="@+id/glucoseLabel"
                android:layout_weight="1"
                android:editable="true" />



        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_weight="1"
                android:src="@drawable/blood_pressure_cuff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Blood Pressure"
                android:layout_weight="1"
                android:id="@+id/textView2"
                android:background="#ff21ff62" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Not Available"
                android:layout_weight="1"
                android:id="@+id/pressureLabel"
                android:editable="true" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_weight="1"
                android:src="@drawable/spirometer"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Respiratory Rate"
                android:layout_weight="1"
                android:id="@+id/textView3"
                android:background="#ffada9ff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Not Available"
                android:layout_weight="1"
                android:id="@+id/respiratoryLabel"
                android:editable="true" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_weight="1"
                android:src="@drawable/weighing_scale"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Weight"
                android:layout_weight="1"
                android:id="@+id/textView4"
                android:autoText="false"
                android:background="#ffffba9b" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Not Available"
                android:layout_weight="1"
                android:id="@+id/weightLabel"
                android:editable="true" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_weight="1"
                android:src="@drawable/thermometer"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Temperature"
                android:layout_weight="1"
                android:id="@+id/textView5"
                android:background="#fffffd42" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Not Available"
                android:layout_weight="1"
                android:id="@+id/temperatureLabel"
                android:editable="true" />
        </TableRow>

    </TableLayout>

</RelativeLayout>
