<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="transcend.hsdp.philips.com.transcendapplication" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Sherpa"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="Sherpa" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MeasureActivity"
            android:label="Measure"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="transcend.hsdp.philips.com.transcendapplication.MainActivity" />
        </activity>
        <activity
            android:name=".MovesActivity"
            android:label="Move"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="transcend.hsdp.philips.com.transcendapplication.MainActivity" />
        </activity>
    </application>

</manifest>
